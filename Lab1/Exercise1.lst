                   ; Akash Badshah, Lab1, Exercise 1
                   ; This little program turns an LED on.
                   
0000: 12 00 1F     lcall pat
                   loop:
0003: 80 FE          sjmp loop
                   
                   ; Subroutine for Exercise 1.1, least significant bit lightin
                   lsb:
0005: 75 90 00       mov p1, #00h       ; Clear the LED bank
0008: 75 90 01       mov p1, #01h       ; Turn on a single light
000B: 22             ret
                   
                   ; Subroutine for Exercise 1.2, most significant bit lighting
                   msb:
000C: 75 90 00       mov p1, #00h        ; Clear the LED bank
000F: 75 90 80       mov p1, #80h        ; Turn on the last light
0012: 22             ret
                   
                   ; Subroutine for Exercise 1.3, bitwise operators
                   bit:
0013: 75 90 80       mov p1, #80h        ; Fill the LED bank with 1 light on
0016: C2 97          clr p1.7            ; Clear the light on the msb
0018: D2 90          setb p1.0           ; set the light on the lsb
001A: 22             ret
                   
                   ; Subroutine for Exercise 1.4, static pattern
                   ; simply use the hexcode for 01010101b to make
                   ; an alternating light pattern
                   stat:
001B: 75 90 55       mov p1, #55h        ; Fill the LED bank with the binary pa
001E: 22             ret
                   
                   ; Subroutine for Exercise 1.5, a dynamic pattern
                   pat:
001F: 74 0B          mov  a, #11         ; Start with a random seed of two LEDs
                     step:
0021: F5 90            mov p1, a         ; move the contents of register a into
                       pat_loop:
0023: D8 FE              djnz r0, pat_loop   ; increment 255 times using djnz t
0025: D9 FC              djnz r1, pat_loop   ; repeat that loop 255 times to in
0027: 23               rl a              ; rotate the bits in a left to mix up 
0028: C4               swap a            ; switch the nibbles in a for more pat
0029: 80 F6            sjmp step         ; jump back to the step to set the lig
                   
